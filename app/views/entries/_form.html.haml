= form_for @entry do |f|
  - if @entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@entry.errors.count, "error")} prohibited this entry from being saved:"
      %ul
        - @entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :author
    = f.number_field :author
  .field
    = f.label 'url'
    %br/
    = f.text_field :avatar
  .actions
    = f.submit 'Save'

    